{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "downlevelIteration": true,
    "noEmit": false
  },
  "include": [
    "src/*.ts",
    "src/*.tsx",
    "src/tests/*.ts",
    "src/tests/*.tsx",
    "src/graphql/*.ts",
    "src/blogs/*.tsx",
    "src/entries/*.tsx",
    "src/stories/*.tsx"
  ]
}
