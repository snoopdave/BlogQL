{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "downlevelIteration": true,
    "noEmit": true
  },
  "include": [
    "src/*.ts",
    "src/*.tsx",
    "src/__tests__/*.ts",
    "src/__tests__/*.tsx",
    "src/graphql/*.ts",
    "src/stories/*.tsx",
  ]
}
