{
  "name": "blogql-client",
  "version": "1.0.0",
  "description": "BlogQL web interface",
  "main": "index.js",
  "author": "Dave Johnson",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "start": "http-server -p 3000 -a localhost public",
    "compile": "tsc --noEmit false && yarn run gentypes",
    "test": "jest --detectOpenHandles",
    "build": "yarn run compile; webpack",
    "gentypes": "npx apollo codegen:generate --excludes=src/*/*.ts --localSchemaFile=../server/schema.graphql --target=typescript --tagName=gql",
    "gentypes-against-server": "npx apollo codegen:generate --excludes=src/*/*.ts --endpoint=http://localhost:4000/graphql --target=typescript --tagName=gql",
    "clean": "rm -rf node_modules build src/*.js src/*.jsx __generated__/* src/graphql/__generated__/* schema.graphql",
    "build-storybook": "build-storybook -s public",
    "storybook": "start-storybook -p 6006 -s public"
  },
  "dependencies": {
    "@apollo/client": "~3.5.6",
    "@fortawesome/fontawesome-free": "^5.15.3",
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "bootstrap": "4.6.0",
    "cross-fetch": "^3.1.5",
    "http-server": "^14.1.1",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "react": "^17.0.2",
    "react-bootstrap": "^1.6.6",
    "react-dom": "^17.0.2",
    "react-google-login": "^5.2.2",
    "react-quill": "2.0.0",
    "react-router-bootstrap": "^0.25.0",
    "react-router-dom": "^5.2.0",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@graphql-codegen/cli": "^2.6.2",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "~12.1.4",
    "@testing-library/user-event": "^13.1.9",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^16.18.11",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "@types/react-router-dom": "^5.1.7",
    "apollo": "^2.34.0",
    "css-loader": "^6.7.3",
    "graphql": "~15.8.0",
    "mini-css-extract-plugin": "^2.7.2",
    "msw": "^0.49.2",
    "style-loader": "^3.3.1",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.2",
    "typescript": "~4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "jsdom",
    "testRegex": "(/tests/.tsx|(\\.|/)(test|spec))\\.(tsx?)$",
    "transformIgnorePatterns": [
      "node_modules/?!@apollo"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ]
  }
}
