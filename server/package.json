    "clean": "rm -rf src/*.js src/*/*.js",
    "nuke": "rm -rf node_modules/*"
  },
  "dependencies": {
    "@apollo/client": "^3.8.7",
    "@apollo/server": "^4.9.5",
    "@faker-js/faker": "^8.0.2",
