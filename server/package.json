    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.5",
    "@types/sqlite3": "^3.1.10",
    "apollo-client": "^2.6.10",
    "apollo-datasource": "^3.3.2",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.2",
    "google-auth-library": "^7.11.0",
    "module-alias": "^2.2.3",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.9.0",
    "sequelize-typescript": "^2.1.5",
    "sqlite3": "^5.1.6",
    "ts-node": "^10.9.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^18.7.16",
    "@types/relay-runtime": "^14.1.15",
    "@types/uuid": "^9.0.6",
    "faker": "^6.6.6",
    "graphql": "^16.8.1",
    "jest": "^29.0.3",
    "react": "^18.2.0",
    "supertest": "^6.2.4",
    "ts-jest": "^29.0.3",
    "typescript": "~4.9.4"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "verbose": true,
    "collectCoverage": true,
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json",
          "useESM": true
        }
      ]
    }
  }
