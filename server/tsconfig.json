{
  "compilerOptions": {
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "lib": [
      "ES2020"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "ESNext",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "noEmit": true,
    "outDir": "src",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "isolatedModules": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "deploy"
  ]
}
